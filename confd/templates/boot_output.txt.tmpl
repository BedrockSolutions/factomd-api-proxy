{{- $listenPort := getv "/listenPort" "" -}}
{{- $name := getv "/name" -}}
{{- $sslCertificate := getv "/ssl/certificate" "" -}}
{{- $sslCertificateKey := getv "/ssl/certificateKey" "" -}}
